<!-- THE POSTS -->
<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-col">
      <br />
    </div>
    <div id="landingText" class="mdl-cell--align-center mdl-cell--8-col">
        <h2>Hi there, I'm Cornellius</h2>
          <%= link_to "Create a new article", new_article_path %>
        <br>
        <% @articles.each do |article| %>
           <div class="mdl-grid">
          <!-- SHOW TIME OF CREATED POST   -->
           <div class="mdl-cell mdl-cell--2-col">
             <%= article.created_at.strftime("%d") %>
             <br>
              <%= article.created_at.strftime("%b  %Y") %>
           </div>
           <div class="mdl-cell mdl-cell--10-col">
              <%= link_to markdown(article.title), article_path(article) %>
              <br>
              <%= truncate markdown(article.body), length: 250 %>
              <br>
              <%= link_to "Read More", article, class:"mdl-button mdl-button--colored
                                                          mdl-js-button mdl-js-ripple-effect" %>
              <br>
           </div>
          </div>
          <hr>
        <% end %>
    </div>
    <div class="mdl-cell mdl-cell--2-col">
      <br />
    </div>
</div>
